{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "pppicker",
  "version": "0.1.0",
  "identifier": "com.pppicker.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "pppicker",
        "width": 336,
        "height": 432,
        "minWidth": 336,
        "minHeight": 432
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
